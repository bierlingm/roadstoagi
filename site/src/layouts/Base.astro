---
import "../styles/tokens.css";
const { title = "Roads to AGI", description = "Many roads. Shared tests. Survival, not consensus." } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <!-- Google Fonts: Inter, Source Serif 4, IBM Plex Mono -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Inter:wght@400;500;600;700&family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&display=swap" rel="stylesheet">
</head>
<body>
  <nav>
    <div class="nav-inner">
      <a href="/" class="logo">Roads to AGI</a>
      <div class="links">
        <a href="/roads">Roads</a>
        <a href="/challenges">Challenges</a>
        <a href="/highway">Highway</a>
        <a href="/about">About</a>
      </div>
    </div>
  </nav>
  <main>
    <slot />
  </main>
  <footer>
    <p>Built by <a href="https://runcible.com">Runcible</a></p>
  </footer>
</body>
</html>
