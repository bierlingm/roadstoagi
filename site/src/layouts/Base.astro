---
const { title = "Roads to AGI", description = "Many roads. Shared tests. Survival, not consensus." } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <style>
    :root {
      --bg: #0a0a0a;
      --fg: #e5e5e5;
      --accent: #3b82f6;
      --muted: #737373;
      --border: #262626;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: system-ui, -apple-system, sans-serif;
      background: var(--bg);
      color: var(--fg);
      line-height: 1.6;
    }
    a { color: var(--accent); text-decoration: none; }
    a:hover { text-decoration: underline; }
    .container { max-width: 1200px; margin: 0 auto; padding: 2rem; }
    nav { border-bottom: 1px solid var(--border); padding: 1rem 2rem; display: flex; gap: 2rem; align-items: center; }
    nav .logo { font-weight: 700; font-size: 1.25rem; }
    nav .links { display: flex; gap: 1.5rem; }
    .hero { text-align: center; padding: 4rem 2rem; }
    .hero h1 { font-size: 3rem; margin-bottom: 1rem; }
    .hero p { color: var(--muted); font-size: 1.25rem; max-width: 600px; margin: 0 auto; }
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem; margin-top: 2rem; }
    .card { background: #141414; border: 1px solid var(--border); border-radius: 8px; padding: 1.5rem; }
    .card h3 { margin-bottom: 0.5rem; }
    .card p { color: var(--muted); font-size: 0.9rem; }
    .tag { display: inline-block; background: var(--border); padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.75rem; margin-right: 0.5rem; }
    .tag.surviving { background: #166534; }
    .tag.contested { background: #854d0e; }
    .btn { display: inline-block; background: var(--accent); color: white; padding: 0.75rem 1.5rem; border-radius: 6px; font-weight: 500; }
    .btn:hover { opacity: 0.9; text-decoration: none; }
    footer { border-top: 1px solid var(--border); padding: 2rem; text-align: center; color: var(--muted); margin-top: 4rem; }
  </style>
</head>
<body>
  <nav>
    <a href="/" class="logo">Roads to AGI</a>
    <div class="links">
      <a href="/roads">Roads</a>
      <a href="/arena">Arena</a>
      <a href="/compare">Compare</a>
      <a href="/highway">Highway</a>
      <a href="/investors">Investors</a>
    </div>
  </nav>
  <slot />
  <footer>
    <p>by <a href="https://runcible.ai">Runcible</a> Â· General Reasoning under Test</p>
  </footer>
</body>
</html>
